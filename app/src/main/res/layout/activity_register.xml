<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asuspc.ManageActivity.RegisterActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/r_password_again"
        android:layout_marginTop="27dp"
        android:text="联系方式"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/r_password_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/r_password"
        android:layout_below="@+id/r_password"
        android:ems="10"
        android:hint="请再次输入密码"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="密码"
        android:textSize="30dp"
        android:layout_below="@+id/r_username"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/r_username" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="类型"
        android:textSize="30dp"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/r_phone"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/r_password_again" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户名"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="80dp" />

    <EditText
        android:id="@+id/r_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView"
        android:layout_marginStart="28dp"
        android:layout_toEndOf="@+id/textView"
        android:ems="10"
        android:hint="请输入用户名"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/r_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignStart="@+id/r_username" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup"
        android:layout_below="@+id/r_phone"
        android:layout_alignEnd="@+id/textView5"
        android:layout_marginTop="21dp">

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="普通用户" />

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="商铺店主" />
    </RadioGroup>

    <Button
        android:id="@+id/r_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册"
        android:layout_marginEnd="18dp"
        android:layout_alignBaseline="@+id/r_clear"
        android:layout_alignBottom="@+id/r_clear"
        android:layout_toStartOf="@+id/radioGroup" />

    <Button
        android:id="@+id/r_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="42dp"
        android:text="清空"
        android:layout_below="@+id/textView3"
        android:layout_alignEnd="@+id/r_password_again"
        android:layout_marginTop="44dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:textSize="30dp"
        android:text="注册界面"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/r_username" />

    <EditText
        android:id="@+id/r_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView2"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/textView2"
        android:ems="10"
        android:hint="请输入联系方式"
        android:inputType="phone" />

</RelativeLayout>
