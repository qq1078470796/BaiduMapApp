<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asuspc.businessOwnerActivity.ManagerActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="71dp"
                    android:layout_height="29dp"
                    android:text="店铺名称:" />

                <EditText
                    android:id="@+id/bm_business_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:text="店铺名字"
                    android:textSize="20dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/bm_business_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/huaji"
                android:layout_weight="2.30" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/bm_business_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1.12"
                    android:text="TextView"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/bm_business_address"
                    android:layout_width="wrap_content"
                    android:layout_height="143dp"
                    android:layout_weight="0.69"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Name" />

                <Button
                    android:id="@+id/bm_changeAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="开始定位" />

                <Button
                    android:id="@+id/bm_see"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.69"
                    android:text="点我看看你在哪" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/huaji" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="堂食套餐" />

            </LinearLayout>

            <ListView
                android:id="@+id/diningList"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_weight="0.53" />

            <Button
                android:id="@+id/bm_adddining"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="添加商品" />

            <Button
                android:id="@+id/bm_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="提交修改的店铺基本信息" />

            <Button
                android:id="@+id/bm_seeuser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="查已经预约的用户信息" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
